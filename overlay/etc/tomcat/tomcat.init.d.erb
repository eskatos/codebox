#!/bin/sh

CATALINA_HOME="<%= @opt %>/apache-tomcat-6.0.20"

case $1 in
    start)
        sudo -u tomcat sh ${CATALINA_HOME}/bin/startup.sh
    ;;
    stop)
        sudo -u tomcat sh ${CATALINA_HOME}/bin/shutdown.sh
    ;;
    restart)
        sudo -u tomcat sh ${CATALINA_HOME}/bin/shutdown.sh
        sudo -u tomcat sh ${CATALINA_HOME}/bin/startup.sh
    ;;
esac

exit 0
